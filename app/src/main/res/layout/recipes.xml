<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/recipeCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="26dp"
                android:text="CheckBox" />

            <TextView
                android:id="@+id/recipeName"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/recipeCheckBox"
                android:layout_toEndOf="@+id/recipeCheckBox"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="TextView" />
            <TextView
                android:id="@+id/recipeSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recipeName"
                android:paddingTop="20dp"
                android:layout_toRightOf="@+id/recipeCheckBox"
                android:textStyle="italic"
                android:layout_toEndOf="@+id/recipeCheckBox"
                android:text="TextView" />

            <ImageView
                android:id="@+id/recipePicture"
                android:layout_width="118dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="90dp"
                android:layout_toEndOf="@+id/recipeName"
                android:layout_toRightOf="@+id/recipeName"
                tools:srcCompat="@tools:sample/avatars" />




        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>